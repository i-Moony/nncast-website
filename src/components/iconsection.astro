const { title } = Astro.props;
---

<section class="w-full flex flex-col items-center gap-4 text-center">
    <h2 class="text-4xl md:text-7xl lg:text-8xl text-[#a70eff] glow">{title}</h2>
    <div class="w-full rounded-3xl grid bg-[#ba67ff]/10 backdrop-blur-[3px] overflow-hidden border-2 border-[#ba67ff]/20 font-sans glow-box">
        <slot></slot>
    </div>
</section>

<style>
    .glow {
        text-shadow:
            0 0 1rem #a70eff,
            0 0 2rem #a70eff,
            0 0 3rem #a70eff,
            0 0 4rem #a70eff,
            0 0 5rem #a70eff,
            0 0 6rem #a70eff,
            0 0 7rem #a70eff;
    }
</style>
